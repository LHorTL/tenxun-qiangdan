{
    "manifest_version": 3,
    "name": "My First Extension",
    "version": "1.0",
    "description": "This is my first Chrome extension!",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {},
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "type": "module"
        }
    ]
}